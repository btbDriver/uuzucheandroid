<?xml version="1.0" encoding="utf-8"?>

<com.youyou.uucar.Utils.View.UUProgressFramelayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tip"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:textColor="@color/action_bar_menu_text_color"
            android:textSize="@dimen/action_bar_menu_text_size"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="55dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_input_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/wx"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:background="@drawable/car_info_bg"
                android:layout_marginRight="24dp"
                android:layout_height="45dp">

                <com.youyou.uucar.Utils.ImageView.BaseNetworkImageView
                    android:id="@+id/wx_icon"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/get_friend_wx_icon"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/subtitle_color"
                    android:text="邀请微信好友"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/wx_icon"
                    android:textSize="@dimen/action_bar_menu_text_size" />

                <com.youyou.uucar.Utils.ImageView.BaseNetworkImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="24dp"
                android:background="@color/c13" />

            <RelativeLayout
                android:id="@+id/pyq"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:background="@drawable/car_info_bg"
                android:layout_marginRight="24dp"
                android:layout_height="45dp">

                <com.youyou.uucar.Utils.ImageView.BaseNetworkImageView
                    android:id="@+id/pyq_icon"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/get_friend_friend_times_icon"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/subtitle_color"
                    android:layout_marginLeft="15dp"
                    android:text="分享到微信朋友圈"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/pyq_icon"
                    android:textSize="@dimen/action_bar_menu_text_size" />

                <com.youyou.uucar.Utils.ImageView.BaseNetworkImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="24dp"
                android:background="@color/c13" />

            <RelativeLayout
                android:id="@+id/wb"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:background="@drawable/car_info_bg"
                android:layout_marginRight="24dp"
                android:layout_height="45dp">

                <com.youyou.uucar.Utils.ImageView.BaseNetworkImageView
                    android:id="@+id/wb_icon"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/get_friend_wb_icon"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/subtitle_color"
                    android:layout_marginLeft="15dp"
                    android:text="分享到新浪微博"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/wb_icon"
                    android:textSize="@dimen/action_bar_menu_text_size" />

                <com.youyou.uucar.Utils.ImageView.BaseNetworkImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="24dp"
                android:background="@color/c13" />

            <RelativeLayout
                android:id="@+id/tx"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/car_info_bg"
                android:layout_height="45dp">

                <com.youyou.uucar.Utils.ImageView.BaseNetworkImageView
                    android:id="@+id/tx_icon"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/get_friend_tx_icon"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/subtitle_color"
                    android:layout_marginLeft="15dp"
                    android:text="分享到腾讯微博"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tx_icon"
                    android:textSize="@dimen/action_bar_menu_text_size" />

                <com.youyou.uucar.Utils.ImageView.BaseNetworkImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:textColor="@color/subtitle_color"
            android:textSize="@dimen/action_bar_menu_text_size"
            android:text="邀请码 "
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.youyou.uucar.Utils.View.UUProgressFramelayout>