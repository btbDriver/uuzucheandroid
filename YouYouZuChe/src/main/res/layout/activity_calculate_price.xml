<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    tools:context="com.youyou.uucar.UI.Owner.calculate.CalculatePriceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/c1"
        android:layout_height="193dp">

        <TextView
            android:id="@+id/noprice"
            android:layout_centerHorizontal="true"
            android:text="暂未计算"
            android:textColor="@color/c11"
            android:textSize="38dp"
            android:layout_marginTop="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/price"
            android:layout_centerHorizontal="true"
            android:text="230"
            android:textColor="@color/c11"
            android:visibility="gone"
            android:textSize="70dp"
            android:layout_marginTop="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/unit_price"
            android:layout_width="wrap_content"
            android:textColor="@color/c11"
            android:textSize="@dimen/f3"
            android:visibility="gone"
            android:layout_toRightOf="@id/price"
            android:layout_alignBaseline="@id/price"
            android:layout_height="wrap_content"
            android:text="元/天" />

        <TextView
            android:id="@+id/tip"
            android:textColor="@color/c11"
            android:textSize="@dimen/f5"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="@dimen/s1"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:text="您的爱车在二手市场价值8.6 万元，若进行出租，300天即可赚回成本"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/s1"
        android:background="@color/c11"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/city_root"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆出租城市"
                android:layout_marginLeft="@dimen/s1"
                android:layout_centerVertical="true"
                android:textColor="@color/c8"
                android:textSize="@dimen/f3" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/city_arrow"
                android:layout_marginRight="@dimen/s1"
                android:layout_height="wrap_content"
                android:textColor="@color/c4"
                android:textSize="@dimen/f3" />

            <ImageView
                android:id="@+id/city_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/s1"
                android:background="@drawable/find_car_right_arrow"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c13" />

        <RelativeLayout
            android:id="@+id/brand_root"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌车型"
                android:layout_marginLeft="@dimen/s1"
                android:layout_centerVertical="true"
                android:textColor="@color/c8"
                android:textSize="@dimen/f3" />

            <TextView
                android:id="@+id/brand"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/brand_arrow"
                android:layout_marginRight="@dimen/s1"
                android:layout_height="wrap_content"
                android:textColor="@color/c4"
                android:textSize="@dimen/f3" />

            <ImageView
                android:id="@+id/brand_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/s1"
                android:background="@drawable/find_car_right_arrow"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c13" />

        <RelativeLayout
            android:id="@+id/gear_root"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="变速箱"
                android:layout_marginLeft="@dimen/s1"
                android:layout_centerVertical="true"
                android:textColor="@color/c8"
                android:textSize="@dimen/f3" />

            <TextView
                android:id="@+id/gear"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/gear_arrow"
                android:layout_marginRight="@dimen/s1"
                android:layout_height="wrap_content"
                android:textColor="@color/c4"
                android:textSize="@dimen/f3" />

            <ImageView
                android:id="@+id/gear_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/s1"
                android:background="@drawable/find_car_right_arrow"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c13" />

        <RelativeLayout
            android:id="@+id/year_root"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买年份"
                android:layout_marginLeft="@dimen/s1"
                android:layout_centerVertical="true"
                android:textColor="@color/c8"
                android:textSize="@dimen/f3" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/year_arrow"
                android:layout_marginRight="@dimen/s1"
                android:layout_height="wrap_content"
                android:textColor="@color/c4"
                android:textSize="@dimen/f3" />

            <ImageView
                android:id="@+id/year_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/s1"
                android:background="@drawable/find_car_right_arrow"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/bottom_left_bottom_bg"
            android:textColor="@color/white_button_text_color"
            android:text="重新计算"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/f2"
            android:layout_marginLeft="@dimen/s1"
            android:layout_marginRight="@dimen/s1" />

        <TextView
            android:id="@+id/sure"
            android:text="开始计算"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/s1"
            android:layout_marginRight="@dimen/s1"
            android:textSize="@dimen/f2"
            android:textColor="@color/red_button_text_color"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/red_button_bg" />
    </LinearLayout>
</LinearLayout>
