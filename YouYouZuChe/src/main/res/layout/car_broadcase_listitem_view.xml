<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/one_centimeter_size">

        <TextView
            android:id="@+id/car_type"
            android:layout_marginLeft="@dimen/drawer_header_text_size"
            android:layout_width="wrap_content"
            android:textColor="@color/c8"
            android:textSize="@dimen/f3"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/car_xinghao"
            android:layout_marginLeft="@dimen/thirteen_size"
            android:layout_width="wrap_content"
            android:textColor="@color/c8"
            android:textSize="@dimen/f3"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/car_paizhao"
            android:layout_marginLeft="@dimen/thirteen_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/c8"
            android:textSize="@dimen/f3"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/jiage"
            android:layout_marginLeft="@dimen/thirteen_size"
            android:layout_width="wrap_content"
            android:textColor="@color/c8"
            android:textSize="@dimen/f3"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/thirteen_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c13" />
</LinearLayout>