<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context="com.youyou.addcar.Safety">

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/safety_tip"
        android:textColor="@color/c8"
        android:textSize="@dimen/f3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tip"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/white_input_bg"
        android:divider="@drawable/linear_divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <RelativeLayout
            android:id="@+id/user_id_front"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/user_id_front"
                android:textColor="@color/c8"
                android:textSize="@dimen/f3" />

            <View
                android:id="@+id/center_view1"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="152dp"
                android:layout_height="96dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/center_view1">

                <ImageView
                    android:id="@+id/front_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/user_id_def" />

                <RelativeLayout
                    android:id="@+id/front_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/photo_front_bg"
                    android:clickable="false" />

                <RelativeLayout
                    android:id="@+id/front_root_transport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/photo_front_transport_bg"
                    android:clickable="true" />


                <View
                    android:id="@+id/center_view2"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/front_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/center_view2"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/camere_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/center_view2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/upload_button"
                    android:textColor="@color/c8"
                    android:textSize="@dimen/f3" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/jiaoqiangxian_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/jiaoqiangxian_title"
                android:textColor="@color/c8"
                android:textSize="@dimen/f3" />

            <View
                android:id="@+id/center_view3"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="152dp"
                android:layout_height="96dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/center_view3">

                <ImageView
                    android:id="@+id/back_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/jiaoqiangxian_def" />

                <RelativeLayout
                    android:id="@+id/back_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/photo_front_bg"
                    android:clickable="false" />

                <RelativeLayout
                    android:id="@+id/back_root_transport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/photo_front_transport_bg"
                    android:clickable="true" />

                <View
                    android:id="@+id/center_view4"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/back_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/center_view4"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/camere_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/center_view4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/upload_button"
                    android:textColor="@color/c8"
                    android:textSize="@dimen/f3" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/driving_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/driving_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/driving_front"
                android:textColor="@color/c8"
                android:textSize="@dimen/f3" />

            <RelativeLayout
                android:layout_width="152dp"
                android:layout_height="96dp"
                android:layout_below="@id/driving_title"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/xingshi_front_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/driving_front_def" />

                <View
                    android:id="@+id/center_view5"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    android:layout_centerInParent="true" />

                <RelativeLayout
                    android:id="@+id/xingshi_front_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/photo_front_bg"
                    android:clickable="false" />

                <RelativeLayout
                    android:id="@+id/xingshi_front_transport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/photo_front_transport_bg"
                    android:clickable="true" />

                <View
                    android:id="@+id/center_view6"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/xingshi_front_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/center_view6"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/camere_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/center_view6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/upload_button"
                    android:textColor="@color/c8"
                    android:textSize="@dimen/f3" />
            </RelativeLayout>

            <View
                android:id="@+id/center_view7"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_width="152dp"
                android:layout_height="96dp"
                android:layout_below="@id/driving_title"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/center_view7">

                <ImageView
                    android:id="@+id/xingshi_back_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/driving_back_def" />

                <View
                    android:id="@+id/center_view8"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    android:layout_centerInParent="true" />

                <RelativeLayout
                    android:id="@+id/xingshi_back_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/photo_front_bg"
                    android:clickable="false" />

                <RelativeLayout
                    android:id="@+id/xingshi_back_transport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/photo_front_transport_bg"
                    android:clickable="true" />

                <View
                    android:id="@+id/center_view"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/xingshi_back_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/center_view"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/camere_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/center_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/upload_button"
                    android:textColor="@color/c8"
                    android:textSize="@dimen/f3" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bottom_root"
        android:layout_width="match_parent"
        android:background="@color/c11"
        android:layout_alignParentBottom="true"
        android:layout_height="59dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c8" />

        <TextView
            android:id="@+id/sure"

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/red_button_bg"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/red_button_text_color"
            android:textSize="@dimen/f2" />
    </RelativeLayout>
</RelativeLayout>
