<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.youyou.uucar.Utils.ImageView.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:border_color="#999999"
            app:border_width="1dp"
            android:id="@+id/user_head"
            android:layout_width="40dp"
            app:roundHeight="20dp"
            app:roundWidth="20dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/s1"
            android:layout_marginTop="@dimen/s1"
            android:src="@drawable/user_info_small_head_def" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s2"
            android:layout_marginTop="@dimen/s1"
            android:layout_toRightOf="@id/user_head"
            android:text="呵呵"
            android:textColor="@color/c6"
            android:textSize="@dimen/f3" />


        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="呵呵呵"
            android:layout_toRightOf="@id/user_head"
            android:layout_marginLeft="@dimen/s2"
            android:paddingBottom="@dimen/s1"
            android:layout_below="@id/name"
            android:layout_marginTop="@dimen/s2"
            android:textColor="@color/c8"
            android:textSize="@dimen/f3" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/s1"
            android:layout_marginTop="@dimen/s1"
            android:text="asdasd"
            android:textColor="@color/c8"
            android:textSize="@dimen/f3" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/title"
        android:background="@color/c13" />

</RelativeLayout>