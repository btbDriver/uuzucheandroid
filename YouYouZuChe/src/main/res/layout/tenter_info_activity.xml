<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">


                <com.youyou.uucar.Utils.ImageView.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/image"
                    android:layout_width="@dimen/content_item_size"
                    android:layout_height="@dimen/content_item_size"
                    android:layout_centerInParent="true"
                    app:border_color="#999999"
                    app:border_width="1dp"
                    android:layout_marginLeft="@dimen/drawer_header_text_size"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/image_content_size"
                    android:src="@drawable/header_neibu" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/drawer_header_text_size"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="王花花"
                            android:textColor="@color/subtitle_color"
                            android:textSize="@dimen/f1" />

                        <RatingBar
                            android:id="@+id/star"

                            style="@style/StarBigRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/f1"
                            android:isIndicator="true"
                            android:numStars="5" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="注册时间："
                            android:textColor="@color/c8"
                            android:textSize="@dimen/f3" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/c8"
                            android:textSize="@dimen/f3"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/pagerSliding_pading_leftright"
                            android:text="2014年7月12日" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="驾龄"
                                android:layout_marginLeft="6dp"
                                android:textColor="@color/c8"
                                android:textSize="@dimen/action_bar_subtitle_text_size" />

                            <TextView
                                android:id="@+id/jialing"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:gravity="left"
                                android:layout_marginLeft="3dp"
                                android:text="2年"
                                android:textColor="@color/action_bar_menu_text_color"
                                android:textSize="@dimen/f2" />

                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="@dimen/image_content_size"
                            android:layout_gravity="center"
                            android:background="@color/c13" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="年龄"
                                android:textColor="@color/c8"
                                android:textSize="@dimen/action_bar_subtitle_text_size" />

                            <TextView
                                android:id="@+id/age"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="30岁"
                                android:textColor="@color/action_bar_menu_text_color"
                                android:textSize="@dimen/f2" />

                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="@dimen/image_content_size"
                            android:layout_gravity="center"
                            android:background="@color/c13" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="用车时间"
                                android:textColor="@color/c8"
                                android:textSize="@dimen/action_bar_subtitle_text_size" />

                            <TextView
                                android:id="@+id/ycsj"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="20小时"
                                android:textColor="@color/action_bar_menu_text_color"
                                android:textSize="@dimen/f2" />

                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="@dimen/image_content_size"
                            android:layout_gravity="center"
                            android:background="@color/c13" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:text="用车次数"
                                android:textColor="@color/c8"
                                android:textSize="@dimen/action_bar_subtitle_text_size" />

                            <TextView
                                android:id="@+id/ycsc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:text="2次"
                                android:textColor="@color/action_bar_menu_text_color"
                                android:textSize="@dimen/f2" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:visibility="gone"
                android:background="@color/c13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ower_header_size"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/drawer_header_text_size"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <com.youyou.uucar.Utils.ImageView.BaseNetworkImageView
                        android:layout_width="@dimen/image_content_size"
                        android:layout_height="@dimen/image_content_size"
                        android:layout_gravity="center"
                        android:background="@drawable/phone" />
                </FrameLayout>

                <TextView
                    android:id="@+id/phone"
                    android:layout_marginLeft="@dimen/thirteen_size"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="13812423211"
                    android:textColor="@color/c8"
                    android:textSize="@dimen/f3"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/phone_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/red_button_text_color"
                    android:textSize="@dimen/f3"
                    android:background="@drawable/red_oval_button" />

                <TextView
                    android:id="@+id/sms_button"
                    android:layout_marginRight="@dimen/drawer_header_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="短信"
                    android:textColor="@color/red_button_text_color"
                    android:textSize="@dimen/f3"
                    android:background="@drawable/red_oval_button" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c13" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/main_bg">

                <TextView
                    android:id="@+id/empty_sub"
                    android:textSize="@dimen/f1"
                    android:text="@string/not_have_appraise"
                    android:layout_margin="@dimen/drawer_header_text_size"
                    android:textColor="@color/c8"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent" />

                <com.youyou.uucar.Utils.View.MyListView
                    android:layout_width="match_parent"
                    android:id="@+id/listview"
                    android:divider="@color/c13"
                    android:dividerHeight="1px"
                    android:headerDividersEnabled="true"
                    android:footerDividersEnabled="false"
                    android:layout_height="wrap_content" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/c13" />


        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/progress_linear"
        android:visibility="gone"
        android:background="@android:color/white"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:progressBarStyleSmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/f3"
                android:text="正在加载数据"
                android:textColor="@color/photo_front_pressed_color" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>