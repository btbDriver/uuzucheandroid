<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context="com.youyou.uucar.UI.Renter.Register.RenterRegisterDriverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/step_1"
                android:layout_width="23dp"
                android:layout_marginLeft="38dp"
                android:layout_height="23dp"
                android:gravity="center"
                android:text="@string/renter_register_step_1"
                android:textColor="@color/renter_register_step_num_color"
                android:background="@drawable/renter_register_step_bg"
                android:textSize="@dimen/f3" />

            <TextView
                android:id="@+id/step_1_text"
                android:text="上传身份证"
                android:textColor="@color/renter_register_step_text_color"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/f3"
                android:layout_marginLeft="12dp"
                android:layout_below="@id/step_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/step_1_line"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_toRightOf="@id/step_1"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/step_2"
                android:background="@drawable/renter_register_step_line_color" />

            <TextView
                android:id="@+id/step_2"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="@string/renter_register_step_2"
                android:textColor="@color/renter_register_step_num_color"
                android:background="@drawable/renter_register_step_bg"
                android:textSize="@dimen/f3" />

            <TextView
                android:id="@+id/step_2_text"
                android:text="上传驾驶证"
                android:textColor="@color/renter_register_step_text_color"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/f3"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/step_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/step_2_line"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="4dp"
                android:layout_toRightOf="@id/step_2"
                android:layout_toLeftOf="@+id/step_3"
                android:background="@drawable/renter_register_step_line_color" />

            <TextView
                android:id="@+id/step_3"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:gravity="center"
                android:layout_marginRight="33dp"
                android:layout_alignParentRight="true"
                android:text="@string/renter_register_step_3"
                android:textColor="@color/renter_register_step_num_color"
                android:background="@drawable/renter_register_step_bg"
                android:textSize="@dimen/f3" />

            <TextView
                android:id="@+id/step_3_text"
                android:text="等待审核"
                android:textColor="@color/renter_register_step_text_color"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/f3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_below="@id/step_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s1"
            android:layout_marginRight="@dimen/s1"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:showDividers="middle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/c11"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/renter_reigster_id_front_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21dp"
                    android:text="驾驶证正面"
                    android:textColor="@color/c8"
                    android:textSize="@dimen/f3" />


                <RelativeLayout
                    android:layout_width="163dp"
                    android:layout_height="106dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/renter_register_img_bg"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="14dp">

                    <ImageView
                        android:id="@+id/user_driver_front"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/user_driver_front_def" />

                    <RelativeLayout
                        android:id="@+id/front_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#CCFFFFFF"
                        android:clickable="false" />

                    <RelativeLayout
                        android:id="@+id/front_root_transport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/photo_front_transport_bg"
                        android:clickable="true" />


                    <View
                        android:id="@+id/center_view"
                        android:layout_width="1px"
                        android:layout_height="1px"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:id="@+id/jsz_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/center_view"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/camera_icon" />

                    <TextView
                        android:id="@+id/jsz_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/center_view"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="@string/upload_button"
                        android:textColor="@color/c8"
                        android:textSize="@dimen/f3" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:background="@color/c11"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/renter_reigster_id_back_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_centerVertical="true"
                    android:text="带有效期的副页"
                    android:textColor="@color/c8"
                    android:textSize="@dimen/f3" />


                <RelativeLayout
                    android:layout_width="163dp"
                    android:layout_height="106dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/renter_register_img_bg"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp">

                    <ImageView
                        android:id="@+id/user_driver_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/user_driver_back_def" />

                    <RelativeLayout
                        android:id="@+id/back_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#CCFFFFFF"
                        android:clickable="false" />

                    <RelativeLayout
                        android:id="@+id/back_root_transport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/photo_front_transport_bg"
                        android:clickable="true" />

                    <View
                        android:id="@+id/center_view_1"
                        android:layout_width="1px"
                        android:layout_height="1px"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:id="@+id/jsz_yxq_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/center_view_1"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/camera_icon" />

                    <TextView
                        android:id="@+id/jszyxq_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/center_view_1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="@string/upload_button"
                        android:textColor="@color/c8"
                        android:textSize="@dimen/f3" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="20dp"
            android:text="驾龄需不少于半年"
            android:textColor="@color/c8"
            android:textSize="@dimen/f3" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/c11"
        android:layout_alignParentBottom="true"
        android:layout_height="59dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c8" />

        <TextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/red_button_bg"
            android:gravity="center"
            android:text="@string/next_button_text"
            android:textColor="@color/red_button_text_color"
            android:textSize="@dimen/f2" />
    </RelativeLayout>

</RelativeLayout>
