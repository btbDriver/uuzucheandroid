<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/main_bg"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c13"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c11"
        android:layout_marginTop="@dimen/s1"
        android:layout_marginBottom="@dimen/s1"
        android:orientation="horizontal">

        <com.youyou.uucar.Utils.ImageView.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                                          app:border_color="#999999"
                                                          app:border_width="1dp"
                                                          android:id="@+id/image"
                                                          android:layout_width="74dp"
                                                          android:layout_height="74dp"
                                                          android:layout_margin="@dimen/s1"
                                                          android:src="@drawable/header_neibu"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王花花"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/image"
            android:textColor="@color/c4"
            android:textSize="@dimen/f3"/>

        <!--<LinearLayout-->
        <!--android:id="@+id/renter_tag_root"-->
        <!--android:layout_toRightOf="@id/name"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:background="#FF0000"-->
        <!--android:layout_marginLeft="7dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal">-->

        <!--</LinearLayout>-->
        <!--<com.youyou.uucar.Utils.ImageView.BaseNetworkImageView-->
        <!--android:id="@+id/renter_tag"-->
        <!--android:layout_toRightOf="@id/name"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="18dp"/>-->

        <RatingBar
            android:id="@+id/star"
            style="@style/FindCarRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/image"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:numStars="5"/>

        <TextView
            android:id="@+id/idnum"
            android:layout_width="wrap_content"
            android:layout_below="@id/star"
            android:singleLine="true"
            android:textSize="@dimen/f5"
            android:textColor="@color/c8"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/image"
            android:text="身份证号码123123123123"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_below="@id/image"
            android:background="@color/c13"
            android:layout_height="1px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/view1"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/drivier_age"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="1年"
                        android:textColor="@color/c4"
                        android:textSize="@dimen/f5"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="驾龄"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/drivier_age"
                        android:gravity="center"
                        android:textSize="@dimen/f5"
                        android:textColor="@color/c8"/>
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/s1"
                    android:layout_marginBottom="@dimen/s1"
                    android:background="@color/c13"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/price_hour_root"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="55dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:text="31"
                        android:gravity="center"
                        android:textColor="@color/c4"
                        android:textSize="@dimen/f5"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="年龄"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_below="@id/age"
                        android:textSize="@dimen/f5"
                        android:textColor="@color/c8"/>
                </RelativeLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/s1"
                    android:layout_marginBottom="@dimen/s1"
                    android:background="@color/c13"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/price_week_root"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="55dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/times"
                        android:layout_width="match_parent"
                        android:text="34567次"
                        android:gravity="center"
                        android:textColor="@color/c4"
                        android:textSize="@dimen/f5"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="租车次数"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_below="@id/times"
                        android:textSize="@dimen/f5"
                        android:textColor="@color/c8"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/owner_text_root"
        android:layout_width="match_parent"
        android:background="@color/c11"
        android:layout_height="45dp">

        <com.youyou.uucar.Utils.ImageView.BaseNetworkImageView
            android:id="@+id/review_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/s1"
            android:background="@drawable/new_car_info_review_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/review_icon"
            android:text="车主评论"
            android:textColor="@color/c4"
            android:textSize="@dimen/f3"/>

    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:background="@color/c13"
        android:layout_marginLeft="@dimen/s1"
        android:layout_marginRight="@dimen/s1"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/nocar_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="115dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:src="@drawable/find_car_list_nocar_icon"/>

            <TextView
                android:id="@+id/nodata_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="暂无评论"
                android:textColor="@color/c8"
                android:textSize="@dimen/f3"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
