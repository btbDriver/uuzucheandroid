<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c11"
    android:orientation="horizontal">

    <com.youyou.uucar.Utils.ImageView.BaseNetworkImageView
        android:id="@+id/head_image"
        android:layout_width="126dp"
        android:layout_height="78dp"
        android:layout_margin="@dimen/s1"
        android:scaleType="centerCrop"
        android:background="@drawable/list_car_img_def" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s1"
            android:layout_marginTop="@dimen/s1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/car_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奥迪A4L"
                    android:textColor="@color/c4"
                    android:textSize="@dimen/f2" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/plate_number"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="京N4QQ28"
                    android:textColor="@color/c8"
                    android:textSize="@dimen/f3" />

                <com.youyou.uucar.Utils.ImageView.BaseNetworkImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/s1"
                    android:background="@drawable/find_car_right_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/f3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/天"
                    android:layout_toRightOf="@id/price"
                    android:textColor="@color/c8"
                    android:textSize="@dimen/f3" />

                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/s1"
                    android:text="正在出租中"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/f5" />
            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>